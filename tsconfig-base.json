{
  "references": [
      { "path": "../hak-core" },
  ],
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": "./",
        "skipLibCheck": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES2020",
        "composite": true,
        },
        "include": [
            "**/src/**/*",
        ],
        "exclude": [
            "node_modules",
            "**/*.spec.ts",
            "dist"
        ]
  }
  